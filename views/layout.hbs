<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    {{!-- css --}}
    <link rel="stylesheet" href="/stylesheets/style.css" />
    {{!-- Bootstrap --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    {{!-- Bootstrap icon --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    {{!-- Uikit --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.15.14/dist/css/uikit.min.css" />
  </head>

  <body>
    <div class="container-fluid fondo">
      <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-toggler" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbar-toggler">
            <a class="navbar-brand" href="/">
              <i class="bi bi-globe-americas"></i>
            </a>

            <ul class="navbar-nav d-flex justify-content-center align-items-center">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/country/catalogue">Catalogue</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About</a>
              </li>
            </ul>

            <div class="btn-layout">
              <div class="d-flex nav-bar-container" >
                {{#unless currentUser}}

                <div class="uk-container uk-flex uk-flex-center uk-flex-middle uk-grid-match uk-grid-small">
                    <div class="uk-card">
                        <a class="uk-button uk-button-default" href="/auth/login">Login</a>
                    </div>
                    <div class="uk-card">
                        <a class="uk-button uk-button-secondary" href="/auth/signup">Signup</a>
                    </div>
                </div>

                {{/unless}}

                {{#if currentUser}}
                  {{#with currentUser}}
                    <h3 class="user-name">{{name}} {{lastName}}</h3>
                    <img src="{{profilePic}}" class="pic-default-navbar"/>
                  {{/with}}
                  {{!-- <div class="uk-container uk-flex uk-flex-center uk-flex-middle uk-grid-match uk-grid-small">
                      <div class="uk-card">
                          <a class="uk-button uk-button-default" href="/user/profile">Profile</a>
                      </div>
                      <div class="uk-card">
                          <a class="uk-button uk-button-secondary" href="/auth/logout">Logout</a>
                      </div>
                  </div> --}}
                  
                  <nav class="uk-navbar uk-margin" uk-navbar>
                      
                          <a class="uk-navbar-toggle uk-navbar-toggle-animate" uk-navbar-toggle-icon href="#"></a>
                          <div class="uk-navbar-dropdown">
                              <ul class="uk-nav uk-navbar-dropdown-nav">
                                  <li class="uk-active">
                                    <div class="uk-container">
                                      <a id="buttonAbout" class="uk-button uk-button-text" href="/create">Create a new post</a>
                                    </div>
                                  </li>
                                  <li>
                                    <div class="uk-container">
                                      <a id="buttonAbout" class="uk-button uk-button-text" href="/user/profile">Profile</a>
                                    </div>
                                  </li>
                                  <li>
                                    <div class="uk-container">
                                      <a id="buttonAbout" class="uk-button uk-button-text" href="/auth/logout">Logout</a>
                                    </div>
                                  </li>                                  
                              </ul>
                          </div>
                      
                  </nav>
                {{/if}}
                
              </div>
            </div>
            
          </div>
        </div>
      </nav>
    </div>
    
    {{{body}}}

    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.14/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.14/dist/js/uikit-icons.min.js"></script>
  </body>

</html>