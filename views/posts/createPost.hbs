<head>
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.15.13/dist/css/uikit.min.css" />
</head>

<body>  

    {{!-- Grid for the image and form --}}
    <div class="uk-child-width-1-3@m uk-grid-match uk-grid-large uk-flex uk-flex-middle uk-flex-center" uk-grid>

        {{!-- Form--}}
        <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body">

                <form>
                    <h2>Tell us about your story!</h2>
                    
                    <fieldset class="uk-fieldset">
                        <legend class="uk-legend">Title</legend>
                        <div class="uk-margin">
                            <input class="uk-input" type="text" placeholder="The most beautiful beach!" aria-label="Input">
                        </div>

                        <legend class="uk-legend">Where was it?</legend>
                        <div class="uk-margin">
                            <input class="uk-input" type="text" placeholder="Mexico" aria-label="Input">
                        </div>
                        
                        <legend class="uk-legend">When was it?</legend>
                        <div class="uk-margin">
                            <input class="uk-input" type="date" aria-label="Input">
                        </div>

                        <legend class="uk-legend">What's your story?</legend>
                        <div class="uk-margin">
                            <textarea class="uk-textarea" rows="6" placeholder="Lorem, ipsum dolor sit..." aria-label="Textarea"></textarea>
                        </div>
                    </fieldset>
                </form> 

            </div>
        </div>

        {{!-- Post an Image --}}
        <div>
            <div class="uk-card uk-card-body uk-card-hover">

                <img src="https://cdn.thewirecutter.com/wp-content/media/2020/11/notebooks-2048px-1990.jpg?auto=webp&quality=75&width=1024" alt="" uk-cover>
            
            </div>
        </div>

    </div>    

    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.13/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.13/dist/js/uikit-icons.min.js"></script>
</body>



