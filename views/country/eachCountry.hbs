                <h5 class="card-title">Title</h5>
                <a href="/post">
                    <button class="btn btn-outline-success login-layout">Go somewhere</button>
                </a>
            </div>
        </div>

    </div>

    <div class="container-for-country country-text">
        <div class="info-countries" id="info-countries">
            {{#with data}}
                <h2 class="main-country" name="countryName">{{countryName}}</h2>
                <div class="flag-text-country">
                    <img src="{{flagImg}}" alt="country-flag" class="flags" name="flagImg">
                    <p name="info">{{info}}</p>
                </div>
            {{/with}}
            
        </div>

        <div class="country-text country-search">

                {{!-- <h1 class="title-catalogue">Countries:</h1>

                <p class="text-cataloque">Which one are you looking for ?</p> --}}

                <form class="dropdown country-enter1" action="/country/eachCountry">
                    <label for="country-select">Country:</label>
                    <select name="country" id="country-select" class="date-rect">
                        <option value="">Please choose a country</option>
                        <option value="Argentina">Argentina</option>
                        <option value="Bolivia">Bolivia</option>
                        <option value="Brasil">Brasil</option>
                        <option value="Canada">Canada</option>
                        <option value="Chile">Chile</option>
                        <option value="Colombia">Colombia</option>
                        <option value="Hungria">Hungria</option>
                        <option value="Mexico">Mexico</option>
                        <option value="Usa">Usa</option>
                    </select>
                    <div >
                        <button type="submit" class="country-list country-enter2">Enter</button>
                    </div>
                </form>
                
                
        </div>
    </div>
    
</div>