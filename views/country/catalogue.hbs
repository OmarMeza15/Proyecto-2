<div class="uk-child-width-expand@s uk-flex uk-flex-middle" uk-grid>

    {{!-- Slideshow of posts --}}
    <div class="uk-card">
        <div class="uk-position-relative uk-visible-toggle" tabindex="-1" uk-slideshow="animation: push">

                    <ul class="uk-slideshow-items">
                        {{#each post}}
                        <li>    
                            <img src="{{ image }}" alt="">
                            <div class="uk-position-bottom uk-position-medium uk-text-center uk-light">
                                <h3 class="uk-margin-remove">{{ title }}</h3>
                                <p>{{ country }}</p>
                                <a class="uk-button uk-button-text" href="/post">Read more</a>
                            </div>
                        </li>
                        {{/each}}
                    </ul>

                    <div class="uk-light">
                        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
                        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
                    </div>

        </div>
    </div>

    {{!-- Search form --}}
    <div class="uk-card">
        <div class="country-text">

                    <h1 class="title-catalogue">Countries:</h1>

                    <p class="text-cataloque">Which one are you looking for ?</p>

                    <div class="dropdown country-enter1">

                    <button class="dropdown-toggle country-list" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <strong>Country</strong>
                    </button>

                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Argentina</a></li>
                        <li><a class="dropdown-item" href="#">Bolivia</a></li>
                        <li><a class="dropdown-item" href="#">Brasil</a></li>
                        <li><a class="dropdown-item" href="#">Canada</a></li>
                        <li><a class="dropdown-item" href="#">Chile</a></li>
                        <li><a class="dropdown-item" href="#">Colombia</a></li>
                        <li><a class="dropdown-item" href="#">Hungria</a></li>
                        <li><a class="dropdown-item" href="#">Mexico</a></li>
                        <li><a class="dropdown-item" href="#">Usa</a></li>            
                    </ul>

                    </div>

                    <div >
                    <button type="submit" class="country-list country-enter2">Search</button>
                    </div>
        </div>
    </div>

</div>




